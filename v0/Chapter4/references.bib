	keywords = {Astrophysics - Earth and Planetary Astrophysics, planets and satellites: composition, white dwarfs},
	pages = {3282--3286},
}

@article{parker_extraterrestrial_2001,
	title = {Extraterrestrial coastal geomorphology},
