	journal = {Icarus},
	author = {Toon, O. B. and Pollack, J. B. and Ward, W. and Burns, J. A. and Bilski, K.},
	month = dec,
	year = {1980},
	note = {ADS Bibcode: 1980Icar...44..552T},
	keywords = {Albedo, Annual Variations, Atmospheric Models, Atmospheric Pressure, Carbon Dioxide, Climate Change, Climatology, Dust, Earth Science, Lunar and Planetary Exploration, Earth Science, Mars Atmosphere, Polar Caps, Solar Energy, Solar Orbits, Water},
