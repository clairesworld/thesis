	journal = {Icarus},
	author = {Steinberger, Bernhard and Werner, Stephanie C. and Torsvik, Trond H.},
	month = jun,
	year = {2010},
	note = {ADS Bibcode: 2010Icar..207..564S},
	pages = {564--577},
}

