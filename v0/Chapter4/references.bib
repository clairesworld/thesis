	urldate = {2023-01-15},
	journal = {Earth and Planetary Science Letters},
	author = {Tamblyn, R. and Hermann, J. and Hasterok, D. and Sossi, P. and Pettke, T. and Chatterjee, S.},
	month = feb,
	year = {2023},
	keywords = {Archean, TTG, crust formation, komatiite, water cycle},
	pages = {117982},
}

