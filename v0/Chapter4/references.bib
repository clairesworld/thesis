	number = {4},
	urldate = {2023-03-30},
	journal = {Journal of Geophysical Research: Solid Earth},
	author = {Fischer, Rebecca A. and Campbell, Andrew J. and Caracas, Razvan and Reaman, Daniel M. and Heinz, Dion L. and Dera, Przemyslaw and Prakapenka, Vitali B.},
