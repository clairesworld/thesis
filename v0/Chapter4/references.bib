	journal = {Earth and Planetary Science Letters},
	author = {Matthews, Simon and Shorttle, Oliver and Rudge, John F. and Maclennan, John},
	month = dec,
	year = {2017},
	keywords = {carbon, degassing, inclusions, mantle, mixing, ratios},
	pages = {1--14},
}

@article{andrew_leong_h2_2023,
	title = {H2 and {CH4} outgassing rates in the {Samail} ophiolite, {Oman}: {Implications} for low-temperature, continental serpentinization rates},
