	author = {Hinkel, Natalie R. and Young, Patrick A. and III, Caleb H. Wheeler},
	month = nov,
	year = {2022},
	note = {Publisher: The American Astronomical Society},
	pages = {256},
}

@article{dorn_hidden_2021,
	title = {Hidden {Water} in {Magma} {Ocean} {Exoplanets}},
