	author = {Novella, Davide and Frost, Daniel J. and Hauri, Erik H. and Bureau, Helene and Raepsaet, Caroline and Roberge, Mathilde},
	month = aug,
	year = {2014},
	keywords = {hydrous melting, nominally anhydrous minerals, seismic anisotropy, upper mantle, water partitioning},
