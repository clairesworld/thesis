	month = dec,
	year = {2015},
	keywords = {Atmosphere, Climate regime, Composition, Planet},
	pages = {449--467},
}

@article{bolis_decaying_2016,
	title = {Decaying shock studies of phase transitions in {MgO}-{SiO2} systems: {Implications} for the super-{Earths}' interiors},
