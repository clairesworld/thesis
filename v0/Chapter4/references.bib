	journal = {Icarus},
	author = {Steinberger, Bernhard and Werner, Stephanie C. and Torsvik, Trond H.},
	month = jun,
	year = {2010},
	keywords = {Earth, Mars, Interior, Venus, Interior, Volcanism, gravity, mars, topography, venus},
	pages = {564--577},
}

