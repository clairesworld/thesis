	author = {Lenardic, A. and Jellinek, A. M. and Moresi, L. -N.},
	month = jul,
	year = {2008},
	keywords = {climate, global tectonics, mantle convection},
	pages = {34--42},
}

@article{lebrun_thermal_2013,
	title = {Thermal evolution of an early magma ocean in interaction with the atmosphere},
