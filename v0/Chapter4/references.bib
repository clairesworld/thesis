	author = {Bolis, R. M. and Morard, G. and Vinci, T. and Ravasio, A. and Bambrink, E. and Guarguaglini, M. and Koenig, M. and Musella, R. and Remus, F. and Bouchet, J. and Ozaki, N. and Miyanishi, K. and Sekine, T. and Sakawa, Y. and Sano, T. and Kodama, R. and Guyot, F. and Benuzzi-Mounaix, A.},
	month = sep,
	year = {2016},
	keywords = {high pressure, laser shock, melting, reflectivity, transition},
