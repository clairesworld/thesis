	author = {Lenardic, A. and Moresi, L. -N. and Jellinek, A. M. and Manga, M.},
	month = jun,
	year = {2005},
	keywords = {continental growth, continents, continent–ocean area, heat flow, mantle convection, thermal history},
	pages = {317--333},
}

@article{grasset_thermal_1998,
	title = {Thermal convection in a volumetrically heated, infinite {Prandtl} number fluid with strongly temperature-dependent viscosity: {Implications} for planetary thermal evolution},
