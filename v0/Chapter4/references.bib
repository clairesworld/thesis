@article{fu_water_2019,
	title = {Water {Concentration} in {Single}-{Crystal} ({Al},{Fe})-{Bearing} {Bridgmanite} {Grown} {From} the {Hydrous} {Melt}: {Implications} for {Dehydration} {Melting} at the {Topmost} {Lower} {Mantle}},
