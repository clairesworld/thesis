	author = {Miyazaki, Yoshinori and Korenaga, Jun},
	month = mar,
	year = {2022},
	note = {Number: 7899
Publisher: Nature Publishing Group},
	keywords = {Carbon cycle, Geodynamics},
	pages = {86--90},
}

