	shorttitle = {Squeezing {Water} {From} a {Stone}},
	url = {https://ui.adsabs.harvard.edu/abs/2020JGRB..12520416C},
	doi = {10.1029/2020JB020416},
	abstract = {Water is key to plate tectonics on Earth, which, in turn, is vital to the production of continental crust. Although arc lavas erupt in a volatile-rich state and calc-alkaline arc plutons are distinguished by the presence of hydrous minerals such as hornblende and biotite, the water content of arc magmas earlier in their evolution—in the deep crust—remains poorly constrained. Here, we report H2O contents in nominally anhydrous minerals measured in situ on petrographic thin sections by secondary ion mass spectrometry of Proterozoic deep crustal xenoliths from Colorado, USA. Clinopyroxene, orthopyroxene, and garnet contain average H2O contents ranging from 75-760, 233-410, and 42-139 ppm, respectively. Reconstructed bulk rock H2O contents range from {\textasciitilde}60 to {\textasciitilde}650 ppm. Intermineral H2O ratios overlap experimental mineral/melt D values and are used to calculate H2O of melts last in equilibrium with the xenoliths. We propose that these xenoliths represent cumulates fractionated from a primitive, hydrous (≥1 wt.\% H2O) melt at high ({\textasciitilde}1 GPa) pressures, similar to conditions in modern subduction zones and potentially associated with widespread arc accretion that formed the core of North America in the Precambrian.},
	urldate = {2022-04-22},
	journal = {Journal of Geophysical Research (Solid Earth)},
	author = {Chin, Emily J. and Curran, Sean T. and Farmer, G. Lang},
	month = oct,
	year = {2020},
	note = {ADS Bibcode: 2020JGRB..12520416C},
	keywords = {arcs, continental crust, cumulate, lower crust, subduction, xenolith},
	pages = {e20416},
}

