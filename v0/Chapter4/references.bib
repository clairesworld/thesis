	urldate = {2021-03-18},
	journal = {Geochemistry, Geophysics, Geosystems},
	author = {Colman, Alice and Sinton, John M. and White, Scott M. and McClinton, J. Timothy and Bowles, Julie A. and Rubin, Kenneth H. and Behn, Mark D. and Cushman, Buffy and Eason, Deborah E. and Gregg, Tracy K. P. and Grönvold, Karl and Hidalgo, Silvana and Howell, Julia and Neill, Owen and Russo, Chris},
