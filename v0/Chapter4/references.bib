	journal = {Contributions to Mineralogy and Petrology},
	author = {Tenner, Travis J. and Hirschmann, Marc M. and Withers, Anthony C. and Ardia, Paola},
	month = feb,
	year = {2012},
	keywords = {410-km discontinuity, Hydrous partial melting, Peridotite},
	pages = {297--316},
}

@article{bolfan-casanova_ferric_2012,
	title = {Ferric iron and water incorporation in wadsleyite under hydrous and oxidizing conditions: {A} {XANES}, {Mössbauer}, and {SIMS} study},
