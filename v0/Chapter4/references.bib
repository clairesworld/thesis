	journal = {The Journal of Chemical Physics},
	author = {Henao, Andrés and Salazar-Rios, Jorge Mario and Guardia, Elvira and Pardo, Luis C.},
	month = mar,
	year = {2021},
	note = {Publisher: American Institute of Physics},
