	journal = {American Mineralogist},
	author = {Bolfan-Casanova, Nathalie and Muñoz, Manuel and McCammon, Catherine and Deloule, Etienne and Férot, Anais and Demouchy, Sylvie and France, Lydéric and Andrault, Denis and Pascarelli, Sakura},
	month = aug,
