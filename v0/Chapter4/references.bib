	author = {Férot, Anaïs and Bolfan-Casanova, Nathalie},
	month = oct,
	year = {2012},
	keywords = {410km, nominally anhydrous minerals, olivine, pyroxene, seismic discontinuities., water storage},
	pages = {218--230},
}

