@article{zhang_effects_2022,
	title = {Effects of {Oxygen} {Fugacity} on {Hydroxyl} {Incorporation} in {Garnet} at 1–3 {GPa} and 800–1000°{C} and {Implications} for {Water} {Storage} in the {Mantle}},
