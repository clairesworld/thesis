@article{bindi_discovery_2021,
	title = {Discovery of {Elgoresyite}, ({Mg},{Fe}){5Si2O9}: {Implications} for {Novel} {Iron}-{Magnesium} {Silicates} in {Rocky} {Planetary} {Interiors}},
