	journal = {Earth and Planetary Science Letters},
	author = {Németh, Péter and Leinenweber, Kurt and Ohfuji, Hiroaki and Groy, Thomas and Domanik, Kenneth J. and Kovács, István J. and Kovács, Judit S. and Buseck, Peter R.},
	month = jul,
