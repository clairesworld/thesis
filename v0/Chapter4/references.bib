	author = {Jin, Sheng},
	month = apr,
	year = {2021},
	note = {ADS Bibcode: 2021MNRAS.502.5302J},
	keywords = {Astrophysics - Earth and Planetary Astrophysics, Astrophysics - Solar and Stellar Astrophysics, methods: data analysis, methods: statistical, planets and satellites: terrestrial planets},
	pages = {5302--5312},
}

