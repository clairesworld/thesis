	number = {1},
	urldate = {2022-05-05},
	journal = {Geoscience Frontiers},
	author = {Yan, Wei and Zhang, Yanyao and Ma, Yunlu and He, Mingyue and Zhang, Lifei and Sun, Weidong and Wang, Christina Yan and Liu, Xi},
	month = jan,
	year = {2021},
	keywords = {- dependence of water solubility, Anhydrous minerals, Coesite preservation, FTIR, New IR experimental Protocol, Water-incorporation mechanism},
