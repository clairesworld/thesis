	year = {2018},
	keywords = {Atmospheric evolution, Early Earth, Habitability, Mars, Primordial atmospheres, Secondary atmospheres, Venus},
	pages = {2},
}

@article{stueken_mission_2020,
	title = {Mission to {Planet} {Earth}: {The} {First} {Two} {Billion} {Years}},
