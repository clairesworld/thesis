@article{lustig-yaeger_hierarchical_2022,
	title = {Hierarchical {Bayesian} {Atmospheric} {Retrieval} {Modeling} for {Population} {Studies} of {Exoplanet} {Atmospheres}: {A} {Case} {Study} on the {Habitable} {Zone}},
