	journal = {Geophysical Research Letters},
	author = {Parmentier, E. M. and Hess, P. C.},
	month = oct,
	year = {1992},
	keywords = {Buoyancy, Convection, Planetary Crusts, Planetary Evolution, Planetary Geology, Planetary Mantles, Planetary Structure, Venus (Planet)},
	pages = {2015--2018},
}

