	month = dec,
	year = {1996},
	keywords = {Magellan Program, Venus, convection, gravity anomalies, heat flow, hot spots, lithosphere, mantle, models, topography, viscosity, volcanism},
	pages = {109--123},
}

@article{kiefer_dynamic_1986,
