@article{fischer_sensitivities_2017,
	title = {Sensitivities of {Earth}'s core and mantle compositions to accretion and differentiation processes},
	volume = {458},
	issn = {0012-821X},
	url = {https://www.sciencedirect.com/science/article/pii/S0012821X16305829},
