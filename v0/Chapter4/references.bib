	note = {ADS Bibcode: 2021AJ....161...69K},
	keywords = {1332, 1709, 1900, 486, 488, 489, 498, Astrophysics - Earth and Planetary Astrophysics, Astrophysics - Instrumentation and Methods for Astrophysics, Bayesian statistics, Exoplanet astronomy, Exoplanet catalogs, Exoplanet detection methods, Exoplanets, Radial velocity, Transit photometry},
