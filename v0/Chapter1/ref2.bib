@article{smart_review_2016,
	title = {A {Review} of the {Isotopic} and {Trace} {Element} {Evidence} for {Mantle} and {Crustal} {Processes} in the {Hadean} and {Archean}: implications for the {Onset} of {Plate} {Tectonic} {Subduction}},
	volume = {9},
