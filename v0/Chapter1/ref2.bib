	journal = {Astronomy \& Astrophysics},
	author = {Demangeon, Olivier D. S. and Osorio, M. R. Zapatero and Alibert, Y. and Barros, S. C. C. and Adibekyan, V. and Tabernero, H. M. and Antoniadis-Karnavas, A. and Camacho, J. D. and Mascareño, A. Suárez and Oshagh, M. and Micela, G. and Sousa, S. G. and Lovis, C. and Pepe, F. A. and Rebolo, R. and Cristiani, S. and Santos, N. C. and Allart, R. and Prieto, C. Allende and Bossini, D. and Bouchy, F. and Cabral, A. and Damasso, M. and Di Marcantonio, P. and D'Odorico, V. and Ehrenreich, D. and Faria, J. and Figueira, P. and Santos, R. Génova and Haldemann, J. and Hara, N. and Hernández, J. I. González and Lavie, B. and Lillo-Box, J. and Curto, G. Lo and Martins, C. J. A. P. and Mégevand, D. and Mehner, A. and Molaro, P. and Nunes, N. J. and Pallé, E. and Pasquini, L. and Poretti, E. and Sozzetti, A. and Udry, S.},
