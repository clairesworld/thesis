@article{christensen_heat_1985,
	title = {Heat transport by variable viscosity convection {II}: pressure influence, non-{Newtonian} rheology and decaying heat sources},
	volume = {37},
	issn = {0031-9201},
	shorttitle = {Heat transport by variable viscosity convection {II}},
	url = {http://adsabs.harvard.edu/abs/1985PEPI...37..183C},
	doi = {10.1016/0031-9201(85)90051-2},
	abstract = {This study is an extension of previous work on the heat transport 
properties of convection with Newtonian temperature-dependent viscosity.
There it has been found that the Nusselt number ( Nu) only weakly
depends on the Rayleigh number defined with the viscosity at the mean
internal temperature ( RaT) when the temperature at the top
boundary is fixed. Here the cases are considered where the viscosity
