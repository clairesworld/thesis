	author = {Daradich, Amy Louise},
	year = {2007},
	keywords = {Continents, Earth sciences, Lithospheres, Mars, Planets, Pure sciences, Rotational stability, continents, dynamic topography, thesis},
}

@article{grott_volcanic_2011,
