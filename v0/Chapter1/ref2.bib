	journal = {Geophysical Journal of the Royal Astronomical Society},
	author = {Christensen, U.},
	year = {1984},
	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1111/j.1365-246X.1984.tb01939.x},
	pages = {343--384},
}

