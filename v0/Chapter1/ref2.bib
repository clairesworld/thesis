}

@article{valencia_detailed_2007,
	title = {Detailed {Models} of {Super}-{Earths}: {How} {Well} {Can} {We} {Infer} {Bulk} {Properties}?},
	volume = {665},
	issn = {0004-637X},
	shorttitle = {Detailed {Models} of {Super}-{Earths}},
