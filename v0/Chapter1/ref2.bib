	journal = {Earth and Planetary Science Letters},
	author = {O'Neill, Hugh St. C. and Berry, Andrew J. and Mallmann, Guilherme},
	month = dec,
	year = {2018},
	keywords = {Fe redox, MORB, basalt, incompatible trace element, oxygen fugacity},
	pages = {152--162},
}

@article{schaefer_magma_2018,
