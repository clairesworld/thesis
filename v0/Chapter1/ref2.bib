	note = {ADS Bibcode: 2015ApJ...803...90P},
	keywords = {Astrophysics - Earth and Planetary Astrophysics, astrobiology, planets and satellites: composition, planets and satellites: interiors, stars: abundances, stars: individual: τ Ceti.},
	pages = {90},
}

@article{helffrich_chemical_2019,
