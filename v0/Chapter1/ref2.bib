	keywords = {bi-stability, climate, mantle convection, planetary interiors, planetary tectonics, tectonophysics},
	pages = {85--94},
}

@article{davies_thermal_1980,
	title = {Thermal histories of convective {Earth} models and constraints on radiogenic heat production in the {Earth}},
	volume = {85},
