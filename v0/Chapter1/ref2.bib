	url = {http://arxiv.org/abs/1703.10375},
	doi = {10.3847/1538-3881/aa80eb},
	abstract = {The size of a planet is an observable property directly connected to the physics of its formation and evolution. We used precise radius measurements from the California-Kepler Survey (CKS) to study the size distribution of 2025 \${\textbackslash}textit\{Kepler\}\$ planets in fine detail. We detect a factor of \${\textbackslash}geq\$2 deficit in the occurrence rate distribution at 1.5-2.0 R\$\_\{{\textbackslash}oplus\}\$. This gap splits the population of close-in (\$P\$ {\textless} 100 d) small planets into two size regimes: R\$\_P\$ {\textless} 1.5 R\$\_\{{\textbackslash}oplus\}\$ and R\$\_P\$ = 2.0-3.0 R\$\_\{{\textbackslash}oplus\}\$, with few planets in between. Planets in these two regimes have nearly the same intrinsic frequency based on occurrence measurements that account for planet detection efficiencies. The paucity of planets between 1.5 and 2.0 R\$\_\{{\textbackslash}oplus\}\$ supports the emerging picture that close-in planets smaller than Neptune are composed of rocky cores measuring 1.5 R\$\_\{{\textbackslash}oplus\}\$ or smaller with varying amounts of low-density gas that determine their total sizes.},
	number = {3},
	urldate = {2020-05-01},
	journal = {The Astronomical Journal},
	author = {Fulton, Benjamin J. and Petigura, Erik A. and Howard, Andrew W. and Isaacson, Howard and Marcy, Geoffrey W. and Cargile, Phillip A. and Hebb, Leslie and Weiss, Lauren M. and Johnson, John Asher and Morton, Timothy D. and Sinukoff, Evan and Crossfield, Ian J. M. and Hirsch, Lea A.},
	month = aug,
	year = {2017},
	note = {arXiv: 1703.10375},
	keywords = {Astrophysics - Earth and Planetary Astrophysics},
	pages = {109},
}

@article{lopez_understanding_2014,
	title = {Understanding the {Mass}-{Radius} {Relation} for {Sub}-{Neptunes}: {Radius} as a {Proxy} for {Composition}},
