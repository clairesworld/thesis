@article{sunder-plasmann_test_2000,
	title = {A test of approximations for modeling convection with temperature-dependent viscosity},
	volume = {120},
	issn = {0031-9201},
	url = {http://adsabs.harvard.edu/abs/2000PEPI..120..103S},
	doi = {10.1016/S0031-9201(00)00147-3},
	abstract = {We compare two approximations for describing the influence of 
temperature-dependent viscosity on thermal convection, namely (i)
depth-dependent viscosity that is controlled by the horizontally
averaged temperature and (ii) viscosity that depends only on the global
mean temperature. We perform two-dimensional (2-D) numerical simulations
